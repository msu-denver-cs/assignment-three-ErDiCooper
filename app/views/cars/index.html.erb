<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Model</th>
      <th>Vin</th>
      <th>Make</th>
      <th>Part</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.model %></td>
        <td><%= car.vin %></td>
        <td><%= car.make %></td>
        <td><%= car.part %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_tag(search_cars_url, method: "get") do %>
	<%= label_tag(:query, "Search for:") %>
